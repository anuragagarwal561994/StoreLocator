<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    android:background="?android:attr/activatedBackgroundIndicator">
    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"/>
    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textColor="@color/edit_text_border_color"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/product_brand_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_search_brand_label"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
        <TextView
            android:id="@+id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_signin_btn_dark_text_disabled"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
        <TextView
            android:id="@+id/product_popularity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/product_search_popularity_label"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
        <TextView
            android:id="@+id/product_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/common_signin_btn_dark_text_disabled"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
    </LinearLayout>
</LinearLayout>