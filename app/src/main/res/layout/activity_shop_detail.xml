<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background_grey"
            android:weightSum="1"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/shop_name_label"
                            android:id="@+id/shopNameLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:ems="10"
                            android:id="@+id/shopName"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/shop_name_hint"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:phoneNumber="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/shop_email_label"
                            android:id="@+id/emailLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:id="@+id/shopEmail"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/shop_email_hint"
                            android:textColorHint="@color/edit_text_hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/shop_address_label"
                            android:id="@+id/addresslabel"
                            android:textColor="@color/base_green"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPostalAddress"
                            android:ems="10"
                            android:id="@+id/shopAddress"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/shop_address_hint"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:singleLine="false"/>
                        </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/shop_phone_number_label"
                            android:id="@+id/numberLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/numberHint"
                            android:layout_weight="0"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/shop_phone_number_hint"
                            android:textColorHint="@color/edit_text_hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="5dp">

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/deliveryCheckBox"
                            android:layout_marginTop="10dp"
                            android:text="@string/delivery_check_box"
                            android:checked="false"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp" />
                        </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_button_text"
            android:id="@+id/button"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:background="@color/base_black"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>
</FrameLayout>
