<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.storelocator.altaiezior.UserDetail" tools:ignore="MergeRootFrame" >

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressBar"
        android:layout_width="263dp"
        android:layout_height="190dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/user_detail_form"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background_grey"
            android:weightSum="1"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/name_label"
                            android:id="@+id/nameLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/first_name"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/first_name_hint"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:phoneNumber="false" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/last_name"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/last_name_hint"
                            android:textColorHint="@color/edit_text_hint_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/email_address_label"
                            android:id="@+id/emailLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:id="@+id/email"
                            android:background="#dddddd"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/email_address_hint"
                            android:textColorHint="@color/edit_text_hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/mobile_number_label"
                            android:id="@+id/numberLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/mobile_number"
                            android:layout_weight="0"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/mobile_number_hint"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:maxLength="10" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/shop_name_label"
                            android:id="@+id/shopNameLabel"
                            android:textColor="@color/base_green" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:ems="10"
                            android:id="@+id/shop_name"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/shop_name_hint"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:phoneNumber="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/shop_address_label"
                            android:id="@+id/shopAddressLabel"
                            android:textColor="@color/base_green"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPostalAddress"
                            android:ems="10"
                            android:id="@+id/shop_address"
                            android:background="@drawable/edit_text_border"
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textColor="@color/base_black"
                            android:hint="@string/shop_address_hint"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:singleLine="false"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_button_text"
            android:id="@+id/update_user_detail"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:background="@color/base_black"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Such User"
        android:id="@+id/no_such_user_textview"
        android:textAlignment="textEnd"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textSize="50dp"
        android:textColor="@android:color/secondary_text_dark_nodisable" />

</FrameLayout>
