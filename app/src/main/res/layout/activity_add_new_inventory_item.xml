<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.storelocator.altaiezior.AddNewInventoryItem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/product_name_label"
                    android:id="@+id/productNameLabel"
                    android:textColor="@color/base_green"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:imeActionId="@+id/productBrand"
                    android:id="@+id/productName"
                    android:background="@drawable/edit_text_border"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textColor="@color/base_black"
                    android:hint="@string/product_name_hint"
                    android:textColorHint="@color/edit_text_hint_color"
                    android:phoneNumber="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/product_brand_label"
                    android:id="@+id/productBrandLabel"
                    android:textColor="@color/base_green"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:imeActionId="@+id/productDescription"
                    android:id="@+id/productBrand"
                    android:background="@drawable/edit_text_border"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textColor="@color/base_black"
                    android:hint="@string/product_brand_hint"
                    android:textColorHint="@color/edit_text_hint_color"
                    android:phoneNumber="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/product_description_label"
                    android:id="@+id/productDescriptionLabel"
                    android:textColor="@color/base_green"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:imeActionId="@+id/ProductCategoryButton"
                    android:id="@+id/productDescription"
                    android:background="@drawable/edit_text_border"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:textColor="@color/base_black"
                    android:hint="@string/product_description_hint"
                    android:textColorHint="@color/edit_text_hint_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="20dp"
                    android:textAlignment="viewStart"
                    android:background="@color/edit_text_back_color"
                    android:drawableEnd="@drawable/arrow_right"
                    android:id="@+id/ProductCategoryButton"
                    android:text="@string/product_category_text"
                    android:textColor="@color/base_black"
                    android:layout_marginTop="20dp"
                    android:singleLine="false" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

</FrameLayout>
